<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVCExample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text.extra.large" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_blue_900</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="MaterialButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:padding">08dp</item>
        <item name="backgroundTint">@color/button_selector</item>
    </style>
</resources>